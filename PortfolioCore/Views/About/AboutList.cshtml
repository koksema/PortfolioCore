@model List<About>

@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Listeleme Sayfası</h1>
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Başlık</th>
		<th>Açıklama</th>
		<th>Resim</th>
		<th>DoğumGünü</th>
		<th>Telefon</th>
		<th>Şehir</th>
		<th>Yaş</th>
		<th>Email</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.AboutId</td>
			<td>@item.Title</td>
			<td>@item.Description</td>
			<td>@item.Image</td>
			<td>@item.Birtday.ToString("dd.MM.yyyyy")</td>
			<td>@item.PhoneNumber</td>
			<td>@item.City</td>
			<td>@item.Age</td>
			<td>@item.Email</td>
			<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
			<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>



		</tr>
	}
</table>
<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Özellik Girişi</a>
