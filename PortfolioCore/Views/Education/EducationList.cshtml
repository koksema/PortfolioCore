@model List<Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Eğitim Listeleme Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>AltBaşlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <td>@item.EducationId</td>
        <td>@item.Title</td>
        <td>@item.DateInfo</td>
        <td>@item.SubTitle</td>
        <td>@item.Description</td>
        <td><a href="/skill/DeleteSkill/@item.EducationId" class="btn btn-danger">Sil</a></td>
        <td><a href="/skill/UpdateSkill/@item.EducationId" class="btn btn-success">Güncelle</a></td>

    }



</table>

<a href="/Education/CreateEducation/" class="btn btn-primary">Yeni Eğitim Girişi</a>
