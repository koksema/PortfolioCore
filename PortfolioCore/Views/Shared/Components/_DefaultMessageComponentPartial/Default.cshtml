@model Message
@if (ViewBag.Success != null)
{
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script>
		Swal.fire({
			icon: 'success',
			title: '@ViewBag.Success!',

			showConfirmButton: true

		});
	</script>
}



<div class="col-lg-8">
	<form action="/SendMessage/SendMessage" method="post" data-aos="fade-up" data-aos-delay="200">
		<div class="row gy-4">

			<div class="col-md-6">
				<input type="text" class="form-control" placeholder="Ad-Soyad" asp-for="NameSurname">
			</div>

			<div class="col-md-6 ">
				<input type="email" class="form-control" placeholder="Mail" asp-for="Email">
			</div>

			<div class="col-md-12">
				<input type="text" class="form-control" placeholder="Konu" asp-for="Subject">
			</div>
			<div class="col-md-12">
				<textarea class="form-control" rows="6" placeholder="Mesaj" asp-for="MessageDetail"></textarea>
			</div>

			<div class="col-md-12 text-center">


				<button type="submit" class="btn btn-outline-primary">Mesaj Gönder</button>
			</div>
		</div>
	</form>
</div><!-- End Contact Form -->