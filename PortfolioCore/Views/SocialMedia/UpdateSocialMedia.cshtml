@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Güncelleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="SocialMediaId" />
    <label>İsim</label>
    <input type="text" class="form-control" asp-for="SocialMediaName" style="border:1px solid black" />
    <br />
    <label>Resim</label>
    <input type="text" class="form-control" asp-for="SocialMediaImage" style="border:1px solid black" />
    <br />
    <label>Link</label>
    <input type="text" class="form-control" asp-for="SocialMediaUrl" style="border:1px solid black" />
    <br />
    <button class="btn btn-success">Sosyal Medya Kaydet</button>

</form>