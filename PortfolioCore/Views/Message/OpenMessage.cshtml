@model Message
@{
    ViewData["Title"] = "OpenMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<input type="hidden" asp-asp-for="MessageId" />

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Listesi </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Gönderen:<b>@Model.NameSurname</b>
							<br />
							Email:<b>@Model.Email</b>
							<br />
							Konu:<b>@Model.Subject</b>
							<br />
							Tarih:<b>@Model.SendDate</b>
							<br /><br/>
							Mesaj Detayı:<b>@Model.MessageDetail</b>
							
						</div>


					</div>
				</div>
			</div>

		</div>
	</div>
</div>
