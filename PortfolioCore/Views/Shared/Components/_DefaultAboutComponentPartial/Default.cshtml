@model List<About>

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
       
    </div><!-- End Section Title -->
   
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        @foreach(var item in Model)
        {

       
        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@item.Image" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@item.Title</h2>
                <p class="fst-italic py-3">
                   @item.Description
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@item.Birtday</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@item.PhoneNumber</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@item.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@item.Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
                           
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>
        }
    </div>

</section>
