@model List<Skill>
@{
    ViewData["Title"] = "DeleteSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yetenek Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Yetenek Başlığı</th>
        <th>Yetenek Değeri</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <td>@item.SkillId</td>
        <td>@item.SkillName</td>
        <td>@item.SkillValue</td>
        <td><a href="/skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
        <td><a href="/skill/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>

    }



</table>

<a href="/skill/CreateSkill/" class="btn btn-primary">Yeni Kategori Girişi</a>
