@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Güncelleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid black" />
    <br />
    <label>Resim</label>
    <input type="text" class="form-control" asp-for="Image" style="border:1px solid black" />
    <br />
    <label>DoğumGünü</label>
    <input type="date" class="form-control" asp-for="Birtday" style="border:1px solid black" />
    <br />
    <label>Telefon</label>
    <input type="tel" class="form-control" asp-for="PhoneNumber" style="border:1px solid black" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" style="border:1px solid black" />
    <br />
    <label>Yaş</label>
    <input type="text" class="form-control" asp-for="Age" style="border:1px solid black" />
    <br />
    <label>Email</label>
    <input type="email" class="form-control" asp-for="Email" style="border:1px solid black" />
    <br />
    <button class="btn btn-success">Özellik Kaydet</button>

</form>

